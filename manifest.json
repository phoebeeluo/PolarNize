{
    "name": "PolarNize",
    "version": "1.0.0",
    "description": "PolarNize identifies the political bias of social media posts, keeping you aware of your own biases and preventing polarization.",
    "manifest_version": 2,
    "icons": { "128": "assets/icon_128.png" },
    "browser_action": {
        "default_icon": "assets/icon.png",
        "default_popup": "popup.html"
    },
    "permissions": ["activeTab", "tabs", "storage", "https://cdn.jsdelivr.net/npm/@tensorflow/tfjs", "https://cdn.jsdelivr.net/npm/@tensorflow-models/toxicity", "<all_urls>"],
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["src/content.js"]
    }],
    "content_security_policy": "script-src 'self' 'unsafe-eval' https://cdn.jsdelivr.net; object-src 'self'"
}